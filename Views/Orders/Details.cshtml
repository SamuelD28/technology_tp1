@model technology_tp1.Models.Order

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>MenuItem</h4>
    <hr />
    <dl class="row">
        <dt class="col-lg-2">
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        <dd class="col-lg-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
        <dt class="col-lg-2">
            @Html.DisplayNameFor(model => model.CustomerName)
        </dt>
        <dd class="col-lg-10">
            @Html.DisplayFor(model => model.CustomerName)
        </dd>
        <dt class="col-lg-2">
            @Html.DisplayNameFor(model => model.CustomerAdress)
        </dt>
        <dd class="col-lg-10">
            @Html.DisplayFor(model => model.CustomerAdress)
        </dd>
        <dt class="col-lg-3">
            @Html.DisplayNameFor(model => model.CustomerPhoneNumber)
        </dt>
        <dd class="col-lg-9">
            @Html.DisplayFor(model => model.CustomerPhoneNumber)
        </dd>
        <dt class="col-lg-2">
            @Html.DisplayNameFor(model => model.DeliveredAt)
        </dt>
        <dd class="col-lg-9">
            @if (Model.DeliveredAt.HasValue)
            {
                @Html.DisplayFor(model => model.DeliveredAt)
            }
            else
            {
                <span>Not delivered</span>
            }
        </dd>
        <dt class="col-lg-2">
            Items
        </dt>
        <dd class="col-lg-12">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Name
                        </th>
                        <th>
                            Quantity
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrdersItems)
                    {
                        <tr>
                            <td>
                                @item.MenuItem.Name
                            </td>
                            <td>
                                @item.Quantity
                            </td>
                            <td>
                                <a asp-controller="MenuItems" asp-action="Details" asp-route-id="@item.MenuItemId">Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
